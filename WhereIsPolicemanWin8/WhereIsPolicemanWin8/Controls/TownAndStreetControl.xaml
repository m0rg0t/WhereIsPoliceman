<UserControl
    x:Class="WhereIsPolicemanWin8.Controls.TownAndStreetControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhereIsPolicemanWin8.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel HorizontalAlignment="Stretch">
            <TextBlock Text="Город" Style="{StaticResource BodyTextStyle}" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Town, Mode=TwoWay}" Name="Town" 
                     BorderBrush="Black" HorizontalAlignment="Stretch"
                     DataContext="{Binding Main, Source={StaticResource Locator}}" />
            <TextBlock Text="Улица" Style="{StaticResource BodyTextStyle}" Margin="0,10,0,0"/>
            <TextBox Text="{Binding Street, Mode=TwoWay}" 
                     BorderBrush="Black" HorizontalAlignment="Stretch"
                     Name="Street" DataContext="{Binding Main, Source={StaticResource Locator}}" />
        </StackPanel>
    </Grid>
</UserControl>
