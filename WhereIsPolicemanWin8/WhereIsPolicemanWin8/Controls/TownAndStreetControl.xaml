<UserControl
    x:Class="WhereIsPolicemanWin8.Controls.TownAndStreetControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WhereIsPolicemanWin8.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel>
            <TextBlock Text="Город"/>
            <TextBox Text="{Binding Town, Mode=TwoWay}" Name="Town" DataContext="{Binding Main, Source={StaticResource Locator}}" />
            <TextBlock Text="Улица"/>
            <TextBox Text="{Binding Street, Mode=TwoWay}" Name="Street" DataContext="{Binding Main, Source={StaticResource Locator}}" />
        </StackPanel>
    </Grid>
</UserControl>
